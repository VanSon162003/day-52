<div class="content-header">
    <h1>Comment Detail</h1>
    <div>
        <a href="/admin/comments" class="btn btn-secondary" id="backButton">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a
            href="/admin/comments/1/edit"
            class="btn btn-primary"
            id="editButton"
        >
            <i class="fas fa-edit"></i> Edit
        </a>
    </div>
</div>

<!-- Comment Details Container -->
<div class="card">
    <div class="card-header">
        <h3 id="itemTitle">Loading...</h3>
    </div>
    <div class="card-body">
        <div id="itemContent">
            <!-- Will be populated with JavaScript -->
            <div class="loading-spinner">Loading details...</div>
        </div>
    </div>
</div>

<!-- Comment Actions -->
<div class="card">
    <div class="card-header">
        <h3>Actions</h3>
    </div>
    <div class="card-body">
        <div class="action-buttons-container">
            <button id="approveButton" class="btn btn-success">
                <i class="fas fa-check"></i> Approve
            </button>
            <button id="rejectButton" class="btn btn-danger">
                <i class="fas fa-ban"></i> Reject
            </button>
            <button id="replyButton" class="btn btn-primary">
                <i class="fas fa-reply"></i> Reply
            </button>
            <button id="deleteButton" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
        </div>
    </div>
</div>

<!-- Activity History -->
<div class="card">
    <div class="card-header">
        <h3>Activity History</h3>
    </div>
    <div class="card-body">
        <ul class="activity-list" id="activityList">
            <!-- Will be populated with JavaScript -->
        </ul>
    </div>
</div>
<div class="modal" id="replyModal">
    <div class="modal-content">
        <h3 class="modal-title">Reply to Comment</h3>
        <div class="modal-body">
            <form id="replyForm">
                <div class="form-group">
                    <label for="replyText">Your Reply</label>
                    <textarea
                        id="replyText"
                        class="form-control"
                        rows="5"
                        required
                    ></textarea>
                </div>
                <div class="form-group">
                    <label for="replyAs">Reply As</label>
                    <select id="replyAs" class="form-control">
                        <option value="admin">Administrator</option>
                        <option value="moderator">Moderator</option>
                        <option value="author">Post Author</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="checkbox-group">
                        <input type="checkbox" id="notifyUser" checked />
                        <label for="notifyUser">Notify user by email</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button
                type="button"
                id="cancelReply"
                class="btn btn-secondary"
                data-cancel
            >
                Cancel
            </button>
            <button
                type="button"
                id="submitReply"
                class="btn btn-primary"
                data-confirm
            >
                Send Reply
            </button>
        </div>
    </div>
</div>

<!-- Confirm Delete Dialog -->
<div class="modal" id="confirmDeleteModal">
    <div class="modal-content">
        <h3 class="modal-title">Confirm Delete</h3>
        <div class="modal-body">
            Are you sure you want to delete this comment? This action cannot be
            undone.
        </div>
        <div class="modal-footer">
            <button
                type="button"
                id="cancelDelete"
                class="btn btn-secondary"
                data-cancel
            >
                Cancel
            </button>
            <button
                type="button"
                id="confirmDelete"
                class="btn btn-danger"
                data-confirm
            >
                Delete
            </button>
        </div>
    </div>
</div>
