<style>
    .flash_message {
        padding: 16px 20px;
        margin-bottom: 25px;
        border: 1px solid #ccc;
        background-color: #ccc;
        line-height: 1.5;
    }

    .flash_message + .flash_message {
        margin-top: 15px;
    }

    .flash_message.success {
        color: #155724;
        border-color: #c3e6cb;
        background-color: #d4edda;
    }

    .flash_message.error {
        color: #721c24;
        border-color: #f5c6cb;
        background-color: #f8d7da;
    }

    .flash_message.warning {
        color: #856404;
        border-color: #ffeeba;
        background-color: #fff3cd;
    }

    .flash_message.info {
        color: #0c5460;
        border-color: #bee5eb;
        background-color: #d1ecf1;
    }
</style>

<% if (flash && flash.length > 0) { %> <% for (const item of flash) { %>
<div class="flash_message <%= item.type %>"><%= item.message %></div>
<% } %> <% } %>
